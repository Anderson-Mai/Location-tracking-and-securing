<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_grey"
    android:orientation="vertical" >
    
       <TextView  android:id="@+id/break_line"
			      android:layout_width="match_parent"
				  android:layout_height="3dp" 
				  android:background="#0080B4">
			      </TextView>     
    
		<LinearLayout 
		  android:id="@+id/part_one"
		    android:layout_width="fill_parent"
			android:orientation="vertical" 
			android:layout_height="wrap_content"
			android:layout_marginTop="20dip"
			android:layout_marginBottom="5dip"
			android:layout_below="@+id/break_line">
			
			
              <LinearLayout 
                  android:id="@+id/first_line"
                  android:layout_width="fill_parent"
                  android:layout_gravity="center_horizontal"
			      android:orientation="horizontal"
			      android:layout_height="40dp"
			      android:weightSum="2">
			          
			      <TextView 
			                 android:layout_width="0dp"
				             android:layout_height="40dip" 
				             android:layout_weight="0.1">
			      </TextView>
		    
				  <TextView android:layout_height="40dip"
								android:layout_width="0dip" 
								android:background="#00000000" 
								android:text="@string/to"
							    android:textStyle="bold"
								android:textColor="@android:color/white"
								android:layout_gravity="center_horizontal"
								android:typeface="sans" 
								android:textSize="18sp" 
								android:layout_weight="0.60"
								android:gravity="center_vertical|left">"
				  </TextView>
							
					

					<EditText android:id="@+id/contactGmail"
								android:layout_height="40dip" 
								android:textSize=" 18sp"
								android:maxLength="60"
								android:hint="Email address"
								android:background="#00000000"
								android:layout_weight="1.2"
								android:textColor="@color/white"
								android:layout_width="0dp"
								android:textColorHint="@color/text_hint_color_light_gray"
								android:typeface="sans" 
								android:gravity="left|center_vertical">
					</EditText>
	 
					<Button android:id="@+id/contactNumberButtonTwo"
								android:layout_width="0dip" 
								android:layout_height="40dip"
								android:background="@drawable/contact_list_two"
								android:layout_gravity="right"
								android:layout_marginRight="40dip" 
								android:gravity="right" 
								android:layout_weight="0.25"/>
							
					<TextView 
			                 android:layout_width="0dp"
				             android:layout_height="40dip" 
				             android:layout_weight="0.15">
			        </TextView>

			</LinearLayout>
			
			
              <LinearLayout
                  android:id="@+id/second_line"
                   android:layout_width="fill_parent"
                   android:layout_gravity="center_horizontal"
			         android:orientation="horizontal"
			          android:layout_height="wrap_content"
			          android:weightSum="2">
			          
			          <TextView 
			                 android:layout_width="0dp"
				             android:layout_height="30dip" 
				             android:layout_weight="0.1">
			                 </TextView>
		    
							<TextView android:layout_height="30dip"
								android:layout_width="0dip" 
								android:background="#00000000" 
								android:text="Name: "	
							    android:textStyle="bold"
								android:textColor="@android:color/white"
								android:layout_gravity="center_horizontal"
								android:typeface="sans" 
								android:textSize="18sp" 
								android:layout_weight="0.50"
								android:gravity="left|top">
							</TextView>
							
							

							<EditText android:id="@+id/msgFullName"
								android:layout_height="30dip" 
								android:textSize="18sp"
								android:layout_gravity="center_horizontal" 
								android:layout_weight="1.20"
								android:inputType="text"
								android:textColor="@color/white"
								android:layout_width="0dp"
								android:hint="Contact name"
								android:background="#00000000"
								android:textColorHint="@color/text_hint_color_light_gray"
								android:typeface="sans" 
								android:gravity="top|left">
							</EditText>
	
							
							<TextView 
			                 android:layout_width="0dp"
				             android:layout_height="30dip" 
				             android:layout_weight="0.15">
			                 </TextView>

			</LinearLayout>
		    
			
			
		    <LinearLayout
		         android:id="@+id/third_line"
		         android:layout_width="fill_parent"
                  android:layout_gravity="center_horizontal"
			         android:orientation="horizontal"
			          android:layout_height="wrap_content"
			          android:weightSum="2">
			          
			          <TextView 
			                 android:layout_width="0dp"
				             android:layout_height="30dip" 
				             android:layout_weight="0.1">
			                 </TextView>
		    


							<TextView android:layout_height="30dip"
								android:layout_width="0dip" 
								android:background="#00000000" 
								android:text="Subject: "
							    android:textStyle="bold"
								android:textColor="@android:color/white"
								android:layout_gravity="center_horizontal"
								android:typeface="sans" 
								android:textSize="18sp" 
								android:layout_weight="0.50"
								android:gravity="left|top">
							</TextView>
							
							

							<EditText android:id="@+id/msgSubject"
								android:layout_height="30dip" 
								android:textSize="18sp"
								android:maxLength="200"
								android:hint="Hi"
								android:layout_gravity="center_horizontal" 
								android:layout_weight="1.20"
								android:inputType="textMultiLine"
								android:textColor="@color/white"
								android:layout_width="0dp"
								android:background="#00000000"
								android:textColorHint="@color/text_hint_color_light_gray"
								android:typeface="sans" 
								android:gravity="top|left"
								android:layout_marginTop="0dip">
							</EditText>
	
							
							<TextView 
			                 android:layout_width="0dp"
				             android:layout_height="30dip" 
				             android:layout_weight="0.15">
			                 </TextView>

			</LinearLayout>
		    
		</LinearLayout>
			
			
	   <SurfaceView
	    		android:id="@+id/camera_preview"
	   			android:layout_width="260dp"
	   			android:layout_height="300dp"
	   			android:background="@drawable/surface_view"
	   			android:layout_centerHorizontal="true"
	   			android:layout_below="@+id/part_one"
	   			android:visibility="invisible"/>
	   
	   	<VideoView
    			 android:id="@+id/camera_review"
    			 android:background="@drawable/surface_view"
   				 android:layout_width="260dp"
	   			 android:layout_height="300dp"
	   			 android:layout_centerHorizontal="true"
	   			 android:layout_below="@+id/part_one"
   				 android:visibility="invisible" 
            />
	   					
	   
	   	  <LinearLayout
                  android:id="@+id/Record_time_length"
                   android:layout_width="match_parent"
                   android:layout_centerHorizontal="true"
			       android:layout_height="wrap_content"
			       android:orientation="vertical"
			       android:layout_marginTop="5dp"
			       android:layout_below="@+id/camera_preview"
			       android:visibility="gone">
		    
		     <ProgressBar
				    android:id="@+id/record_progress_bar"
				    android:layout_width="260dp"
				    android:layout_height="7dp"
				    android:layout_gravity="center_horizontal"
				    style="@android:style/Widget.ProgressBar.Horizontal"
				 />
		    
		     <LinearLayout
                  android:id="@+id/Record_time_left"
                   android:layout_width="wrap_content"
                   android:layout_gravity="center_horizontal"
			       android:layout_height="wrap_content"
			       android:orientation="horizontal"> 
	   	      
	   	        <TextView 
	   	            android:id="@+id/timeLeft"
	   	           				android:layout_height="30dip"
								android:layout_width="35dp" 
								android:background="#00000000" 
								android:gravity="center_horizontal|bottom"
								android:text="300"
							    android:textStyle="bold"
								android:textColor="@android:color/white"
								android:typeface="sans" 
								android:textSize="14sp" 
								android:layout_gravity="center_horizontal">"
				  </TextView>
				  
	   	          <TextView android:id="@+id/timeleftphase"
	   	              android:layout_height="30dp"
								android:layout_width="wrap_content" 
								android:background="#00000000" 
								android:text="second left"
								android:gravity="center_horizontal|bottom"
							    android:textStyle="bold"
								android:textColor="@android:color/white"
								android:typeface="sans" 
								android:textSize="14sp"
								android:layout_gravity="center_horizontal">
				  </TextView>
				  
		        </LinearLayout>
		        
	   	      </LinearLayout>
	   	      
	   	  <LinearLayout 
	   	     android:id="@+id/SelectionButtonSection"
		     android:layout_width="match_parent"
			 android:orientation="vertical"
			 android:layout_height="90dp"
			 android:layout_centerInParent="true"
	   	     >
	
	     <LinearLayout
		     android:id="@+id/frontCamcorderBar"
		     android:layout_width="wrap_content"
			 android:orientation="vertical"
			 android:layout_height="90dp" 
			 android:layout_gravity="center_horizontal">		
			 
	   	   	 
		  	<Button
    			 android:id="@+id/frontCamButtonDown"
   				 android:layout_width="140dp"
   				 android:layout_height="30dp"
   				 android:text="Front Camcoder"
   				 android:layout_marginBottom="14dp"
   				 android:gravity="center"
   				 style="@style/ButtonText16"
   				 android:background="@drawable/down_button"
            />
		  
		  <Button
    			 android:id="@+id/rearCamButtonUp"
   				 android:layout_width="140dp"
   				 android:layout_height="36dp"
   				 style="@style/ButtonText16"
   				 android:text="Rear Camcoder"
   				 android:gravity="center"
   				 android:background="@drawable/up_button"
            />
		 
	   </LinearLayout>
	   
	      <LinearLayout
		     android:id="@+id/rearCamcorderBar"
		     android:layout_width="wrap_content"
			 android:orientation="vertical"
			 android:layout_height="90dp" 
			 android:visibility="gone"
			 android:layout_gravity="center_horizontal">
			 
	   	   	 
		  	<Button
    			 android:id="@+id/frontCamButtonUp"
   				 android:layout_width="140dp"
   				 android:layout_height="36dp"
   				 android:text="Front Camcorder"
   				 android:gravity="center"
   				 style="@style/ButtonText16"
   				  android:layout_marginBottom="14dp"
   				 android:background="@drawable/up_button"
            />
		  
		  <Button
    			 android:id="@+id/rearCamButtonDown"
   				 android:layout_width="140dp"
   				 android:layout_height="30dp"
   				 style="@style/ButtonText16"
   				 android:text="Rear Camcoder"
   				 android:gravity="center"
   				 android:background="@drawable/down_button"
            />
		 
	   </LinearLayout>
	  </LinearLayout> 
	   
	  
	   
	    <LinearLayout
            android:id="@+id/part_two"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
			
         
             
         <Button
            android:id="@+id/StartRecorder"
            android:layout_width="90dp"
            android:layout_height="40dip"
            android:background="@drawable/btn_cancel_red"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Record"
            style="@style/ButtonText18"/>
        
         <TextView 
			    android:layout_width="10dp"
				android:layout_height="40dip">
			</TextView>
        
         <Button
            android:id="@+id/Reset"
            android:layout_width="90dip"
            android:layout_height="40dip"
            android:background="@drawable/btn_green_2"
            android:text="Reset"
            android:textColor="@color/white"
            android:gravity="center"
            style="@style/ButtonText18"/>
       
          <TextView 
			    android:layout_width="10dp"
				android:layout_height="40dip">
			</TextView>
			
			<Button
            android:id="@+id/Cancel"
            android:layout_width="90dip"
            android:layout_height="40dip"
            android:background="@drawable/btn_green_2"
            android:text="@string/Cancel"
            android:textColor="@color/white"
            android:gravity="center"
            style="@style/ButtonText18"/>
			
        </LinearLayout>
        
		  <!--  
	
		 <LinearLayout
		     android:id="@+id/part_two"
		      android:layout_width="wrap_content"
		      android:layout_alignParentBottom="true"
                  android:layout_gravity="center_horizontal"
			         android:orientation="horizontal"
			          android:layout_height="60dp" 
			          android:layout_marginBottom="10dp"
			          android:layout_centerHorizontal="true"> 
		
				<Button android:id="@+id/StartRecorder" 
					android:layout_width="150dp" 
					android:textSize="18sp"   
					android:layout_height="60dp" 
					android:text="Record"
					android:layout_gravity="center_horizontal"
					android:textColor="@android:color/white"
					style="@style/ButtonText" 
					android:textStyle="bold"
					android:background="@drawable/uninstall"/>
				
				 <TextView 
			        android:layout_width="10dp"
				    android:layout_height="60dip">
			     </TextView>
			
				<Button android:id="@+id/Cancel" 
					android:layout_width="150dp" 
					android:textSize="18sp" 
					android:layout_height="60dp" 
					android:text="Cancel"
					android:layout_gravity="center_horizontal"
					android:textColor="@android:color/white"
					style="@style/ButtonText" 
					android:textStyle="bold"
					android:background="@drawable/otherbuttons"/>
	
		</LinearLayout>
		-->
	    <Button android:id="@+id/StopRecorder" 
					android:layout_width="90dp" 
					android:layout_below="@+id/part_two"
					android:textSize="18sp" 
					android:layout_height="40dp"
					android:layout_alignParentBottom="true" 
					android:text="Stop"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="10dp"
					android:textColor="@android:color/white"
					style="@style/ButtonText" 
					android:textStyle="bold"
					android:visibility="gone"
					android:background="@drawable/btn_green_2"/>
		 
	
		 
		 <LinearLayout
		     android:id="@+id/part_three"
		     android:layout_below="@+id/StopRecorder"
		     android:layout_width="wrap_content"
		     android:layout_alignParentBottom="true"
			 android:orientation="horizontal"
			 android:layout_height="40dp" 
			 android:layout_marginBottom="5dp"
			 android:layout_centerHorizontal="true"
			 android:layout_marginTop="10dp"
			 android:layout_marginLeft="10dp"
			 android:layout_marginRight="10dp"
			 android:visibility="gone"> 
			 
		     <Button android:id="@+id/Sending"
					android:textColor="@color/white" 
					style="@style/ButtonText" 
					android:textStyle="bold" 
					android:gravity="center"
					android:layout_gravity="center" 
					android:background="@drawable/btn_green_2"
					android:text="Send"
					android:textSize="18sp" 
					android:layout_centerHorizontal="true"
					android:layout_height="40dip" 
					android:layout_width="90dp">
			</Button>
			         
			<TextView 
			        android:layout_width="10dp"
				    android:layout_height="40dip">
			     </TextView>

			<Button android:id="@+id/ReviewButton" 
					android:layout_width="90dp" 
					android:textSize="18sp" 
					android:layout_height="40dp" 
					android:text="Review"
					android:gravity="center"
					android:layout_gravity="center_horizontal"
					android:textColor="@android:color/white"
					style="@style/ButtonText" 
					android:textStyle="bold"
					android:background="@drawable/btn_green_2"/>
	        	
	      
	      
		 	<TextView 
			        android:layout_width="10dp"
				    android:layout_height="60dip">
			     </TextView>

			<Button android:id="@+id/Cancel_two" 
					android:layout_width="90dp" 
					android:textSize="18sp" 
					android:layout_height="40dp" 
					android:text="Cancel"
					android:gravity="center"
					android:layout_gravity="center_horizontal"
					android:textColor="@android:color/white"
					style="@style/ButtonText" 
					android:textStyle="bold"
					android:background="@drawable/btn_cancel_red"/>
			</LinearLayout>  
			
		 <Button android:id="@+id/StopReview" 
					android:layout_width="160dp" 
					android:textSize="18sp" 
					android:layout_height="40dp"
					android:text="Stop Review"
					android:layout_centerHorizontal="true"
					android:textColor="@android:color/white"
					style="@style/ButtonText" 
					android:textStyle="bold"
					android:visibility="gone"
					android:layout_marginBottom="5dp"
					android:layout_marginTop="10dp"
					android:layout_alignParentBottom="true"
					android:background="@drawable/btn_green_2"/>
			
			<Button
	    	    android:id="@+id/S_Done"
		    	style="@style/ButtonText18"
			 	android:textColor="@color/white"
		    	android:gravity="center"
		    	android:layout_centerHorizontal="true"
		    	android:text="Home"
		    	android:layout_alignParentBottom="true"
		    	android:background="@drawable/btn_blue_2"
		    	android:layout_width="120dp" 
		    	android:layout_marginBottom="5dp"
		    	android:layout_height="40dp"/>
	        	
</RelativeLayout>