<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/pre_background" 
    android:orientation="vertical" >
    <!-- android:background="#007B76" -->
    
    
      <RelativeLayout android:layout_width="fill_parent" 
        android:id="@+id/topHeaderLayout" 
        android:background="@drawable/titlebar" 
        android:gravity="center" 
        android:layout_height="50dip" 
        android:orientation="horizontal">
        
		 <Button
           	 	android:id="@+id/button_back"
            	android:layout_width="60dp"
            	android:layout_height="fill_parent"
            	android:background="@drawable/btn_back"
            	android:gravity="center"
            	android:layout_marginLeft="10dp"
            	android:layout_marginTop="3dp"
            	android:layout_marginBottom="3dp"
            	android:layout_alignParentLeft="true"
            	android:typeface="sans"
            	android:textColor="@color/white">
   			</Button>
		
		
   			<TextView
		      android:id="@+id/header"
		      style="@style/screenTitleText"
		      android:layout_width="160dp"
		      android:layout_height="fill_parent"
		      android:layout_alignParentTop="true"
		      android:layout_centerHorizontal="true"
		      android:gravity="center"
		      android:text="External Card File List"
		      android:textColor="@color/white"
		      android:textSize="16sp"
		      android:typeface="sans" />
   				  
   				   <TextView
           	 	android:id="@+id/button_add"
            	android:layout_width="50dp"
            	android:layout_height="fill_parent"
            	android:background="#00000000"
            	android:gravity="center"
            	android:layout_marginRight="15dp"
            	android:layout_marginTop="3dp"
            	android:layout_marginBottom="3dp"
            	android:typeface="sans"
            	android:layout_alignParentRight="true">
   			</TextView>
		 
		
	   		
	</RelativeLayout>
	
  
   <!--  
    <TextView
    	      android:id="@+id/header" 
    	      android:layout_marginTop="5dip"
    	      android:layout_width="fill_parent"
    	      android:layout_height="50dp" 
    	      android:gravity="center"
    	      android:text="Gmail Contact Box"
    	      android:layout_marginBottom="20dip"
    	      android:textSize="18sp"
    	      android:textColor="@android:color/white"
    	      android:background="@drawable/green320"/>
    	 -->
    
     <TextView 
				android:layout_width="match_parent" 
				android:layout_height="5dip"
				android:id="@+id/topline"
				android:layout_centerHorizontal="true"
				android:layout_marginLeft="10dip"
        		android:layout_marginRight="10dip"
        		android:layout_marginTop="20dip"
				android:visibility="gone"
				android:layout_below="@+id/topHeaderLayout"
				android:background="#6FC3C1">
  	 </TextView>
  	 
             <LinearLayout
                android:id="@+id/WrappedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
   		   	    android:layout_marginRight="10dip"
   		   	    android:layout_marginBottom="55dip"
   		   	    android:layout_marginTop="20dp"
   		   	    android:layout_below="@+id/topline"
                android:orientation="vertical">
      
      			<!--  android:layout_marginLeft="10dip"
   		   	    android:layout_marginRight="10dip"
   		   	    android:layout_below="@+id/topline"
   		   	    -->
   		   	    
   		   	    <TextView 
					android:layout_width="match_parent" 
					android:layout_height="3dip"
					android:id="@+id/topline"
					android:background="#A7D6D5">
  	         </TextView>
		 		<ListView
   		   	    	android:id="@+id/sdCardList"
   		   	    	android:layout_width="fill_parent"
   		   	    	android:layout_height="fill_parent"
   		   	        android:background="#00000000"
   		   	        android:divider="#A7D6D5"
   		   	        android:dividerHeight="1dp"
   		   	    	android:textSize="16sp" 
   		   	    	android:scrollbarStyle="insideOverlay">
   		   		</ListView>
   		   		
   		   		<TextView 
					android:layout_width="match_parent" 
					android:layout_height="1dip"
					android:id="@+id/bottomline"
					android:background="#6FC3C1">
  	         </TextView>
   		  </LinearLayout>
	</RelativeLayout>  
	
	