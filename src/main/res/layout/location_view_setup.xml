<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ECECEC" 
    android:orientation="vertical" >
    
  		<RelativeLayout
  		    android:id="@+id/HeaderLayout"
	        android:layout_width="fill_parent" 
	        android:background="@drawable/blue_background" 
	        android:layout_height="100dp"
	        android:orientation="horizontal"
	        android:layout_marginRight="3dp"
			android:layout_marginLeft="3dp"
			android:layout_marginTop="3dp">
	        
             <TextView
				  android:id="@+id/title"
				  style="@style/screenTitleText"
				  android:layout_width="match_parent"
				  android:layout_height="30dp"
				  android:background="#00000000"
				  android:gravity="center"
				  android:text="Direction to latest location"
				  android:textColor="@color/white"
				  android:textSize="18sp"
				  android:textStyle="italic"
				  android:typeface="sans" />
             
	          <RelativeLayout
		            android:id="@+id/Options_line" 
			        android:layout_width="fill_parent" 
			        android:background="#00000000" 
			        android:layout_height="100dp"
			        android:orientation="horizontal"
			        android:layout_below="@+id/title"> 
			        
		   		    <Button 
		   		        android:id="@+id/Walking_Button"
						android:layout_width="50dip"
						android:layout_height="50dip"
						android:background="@drawable/walking_image"
						android:layout_marginLeft="20dp"
						android:layout_centerVertical="true"
						android:layout_alignParentLeft="true"/>
		   		    
 					<!--  android:layout_alignParentTop="true" -->
 					
				     <Button
				         android:id="@+id/Driving_Button"
				         android:layout_width="70dp"
				         android:layout_height="70dp"
				         android:layout_centerHorizontal="true"
				         android:layout_centerVertical="true"
				         android:background="@drawable/driving_image" />

				     <Button
				         android:id="@+id/Biking_Button"
				         android:layout_width="50dp"
				         android:layout_height="50dip"
				         android:layout_alignParentRight="true"
				         android:layout_marginRight="20dp"
				         android:layout_centerVertical="true"
				         android:background="@drawable/biking_image" />
     			</RelativeLayout>
		</RelativeLayout>

		<TextView
			android:id="@+id/ClientCurrentLocation"
			android:layout_width="240dp"
			android:textSize="14sp"
			android:background="@drawable/blue_background"
			android:layout_height="100dp"
			android:gravity="center"
			android:textColor="@color/white"
			android:text="*** Client is not connected ***"
			android:clickable="true"
			android:layout_below="@+id/HeaderLayout"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="60dp" />

	<TextView
		android:id="@+id/ClientName"
		android:layout_width="match_parent"
		android:textSize="17sp"
		android:background="@color/light_blue"
		android:layout_height="40dp"
		android:gravity="center"
		android:textColor="@color/white"
		android:layout_marginRight="3dp"
		android:layout_marginLeft="3dp"
		android:layout_marginBottom="3dp"
		android:text="My Name"
		android:layout_alignParentBottom="true" />


	</RelativeLayout>  
	
	