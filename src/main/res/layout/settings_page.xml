<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
   
       <TextView  android:id="@+id/break_line"
			      android:layout_width="match_parent"
				  android:layout_height="3dp" 
				  android:layout_marginBottom="3dp"
				  android:background="#0080B4">
	   </TextView>     
    
       <RelativeLayout
	        android:layout_width="fill_parent" 
	        android:id="@+id/HeaderLayout" 
	        android:background="@drawable/blue_background" 
	        android:layout_height="80dp"
	        android:orientation="horizontal"
	        android:layout_marginRight="3dp"
			android:layout_marginLeft="3dp"
	        android:layout_below="@+id/break_line"
	        >
			         <Button
		           	 	android:id="@+id/S_Done"
		            	android:layout_width="60dp"
		            	android:layout_height="60dp"
		            	android:background="@drawable/back_button"
		            	android:layout_marginLeft="25dp"
		            	android:layout_centerVertical="true"
		            	android:layout_alignParentLeft="true">
		   			</Button>
			        
		   		    <Button 
		   		        android:id="@+id/Reset_Button"
										android:layout_width="80dip" 
										android:layout_height="80dip"
										android:background="@drawable/reset_button"
										android:layout_centerVertical="true"
										android:layout_centerInParent="true"/>
		   		    
				   	<Button
				            android:id="@+id/Button_Next"
				            android:layout_width="60dp"
				            android:layout_height="60dip"
				            android:background="@drawable/next_button"
				            android:layout_alignParentRight="true"
				            android:layout_marginRight="20dp"
				            android:layout_centerVertical="true"/>
				         
				     <Button
				            android:id="@+id/current_location_button"
				            android:layout_width="70dp"
				            android:layout_height="70dp"
				            android:layout_alignParentRight="true"
				            android:layout_marginRight="20dp"
				            android:layout_centerVertical="true"
				            android:background="@drawable/current_location"
				            android:visibility="gone"
				     />

        </RelativeLayout>

	<TextView
		android:id="@+id/name_display"
		style="@style/screenTitleText"
		android:layout_width="240dp"
		android:layout_height="60dp"
		android:background="@color/light_blue"
		android:gravity="center"
		android:layout_centerInParent="true"
		android:text="My Names"
		android:textColor="@color/bg_white"
		android:layout_marginTop="15dip"
		android:textSize="22sp"
		android:layout_below="@+id/HeaderLayout"
		android:typeface="sans" />


	<LinearLayout
		    android:id="@+id/part_one"
		    android:layout_width="fill_parent"
			android:orientation="vertical" 
			android:layout_height="wrap_content"
			android:layout_marginTop="30dip"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginBottom="5dip"
			android:layout_below="@+id/name_display">

			<TextView
				android:id="@+id/address_display"
				style="@style/screenTitleText"
				android:layout_width="240dp"
				android:layout_height="100dp"
				android:background="@drawable/rounded_edit_text_three"
				android:gravity="center"
				android:layout_gravity="center_horizontal"
				android:text="My address"
				android:textColor="@color/black"
				android:textSize="16sp"
				android:textStyle="italic"
				android:typeface="sans" />
			
              <LinearLayout 
                  android:id="@+id/first_line"
                  android:layout_width="fill_parent"
                  android:layout_gravity="center_horizontal"
			      android:orientation="horizontal"
			      android:layout_height="40dp"
				  android:layout_marginTop="30dip"
			      android:weightSum="2">
			          
		    
				  <TextView android:layout_height="35dip"
								android:layout_width="0dip" 
								android:background="#00000000" 
								android:text="Secured Distance"
								android:textColor="@color/black"
								android:typeface="sans" 
								android:textSize="16sp" 
								android:layout_weight="1"
								android:textStyle="italic"
								android:gravity="center_vertical|left">"
				  </TextView>
							
					<EditText
					    	android:id="@+id/securedDistance"
							android:layout_height="35dip" 
							android:textSize="16sp"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:inputType="numberDecimal"
							android:textColor="@color/black"
							android:hint="0.0"
							android:paddingLeft="15dp"
							android:background="@drawable/rounded_edit_text_three"
							android:textColorHint="@color/text_hint_color_light_gray"
							android:typeface="sans" 
							android:textStyle="italic"
							android:gravity="center_vertical|left">
					</EditText>

			</LinearLayout>
			
			
              <LinearLayout
                  android:id="@+id/second_line"
                  android:layout_width="fill_parent"
                  android:layout_gravity="center_horizontal"
			      android:orientation="horizontal"
			      android:layout_marginTop="3dp"
			      android:layout_height="40dp"
			      android:weightSum="2">
			          
			          
		    
				  <TextView android:layout_height="35dip"
							android:layout_width="0dip" 
							android:background="#00000000" 
							android:text="Record length"
							android:textColor="@color/black"
							android:layout_gravity="center_horizontal"
							android:typeface="sans" 
							android:textSize="16sp" 
							android:layout_weight="1"
							android:textStyle="italic"
							android:gravity="left|center_vertical">
					</TextView>
							
							

					<EditText
					    	android:id="@+id/recordLength"
							android:layout_height="35dip" 
							android:textSize="16sp"
							android:layout_gravity="center_horizontal" 
							android:layout_weight="1"
							android:inputType="number"
							android:textColor="@color/black"
							android:layout_width="0dp"
							android:hint="30"
							android:paddingLeft="15dp"
							android:background="@drawable/rounded_edit_text_three"
							android:textColorHint="@color/text_hint_color_light_gray"
							android:typeface="sans" 
							android:textStyle="italic"
							android:gravity="center_vertical|left">
					</EditText>
						
			</LinearLayout>
		    
		    <LinearLayout
		         android:id="@+id/third_line"
		         android:layout_width="fill_parent"
		         android:layout_marginTop="5dp"
                  android:layout_gravity="center_horizontal"
			       android:orientation="horizontal"
			        android:layout_height="40dp"
			        android:weightSum="2">
			     


							<TextView android:layout_height="35dip"
								android:layout_width="0dip" 
								android:background="#00000000" 
								android:text="Sound list"
								android:textColor="@color/black"
								android:layout_gravity="center_horizontal"
								android:typeface="sans" 
								android:textSize="16sp"  android:textStyle="italic"
								android:layout_weight="1"
								android:gravity="left|center_vertical">
							</TextView>
							
							

							<EditText android:id="@+id/sounfFile"
								android:layout_height="35dip" 
								android:textSize="16sp"
								android:maxLength="200"
								android:hint="default"
								android:layout_gravity="center_horizontal" 
								android:layout_weight="1"
								android:inputType="textMultiLine"
								android:textColor="@color/black"
								android:layout_width="0dp"
								android:paddingLeft="15dp"
								android:paddingRight="15dp"
								android:background="@drawable/rounded_edit_text_three"
								android:textColorHint="@color/text_hint_color_light_gray"
								android:typeface="sans" 
								android:gravity="center_vertical|left"
								android:textStyle="italic"
								android:layout_marginTop="0dip">
							</EditText>
	
						

			</LinearLayout>
		    
		</LinearLayout>
       
</RelativeLayout>