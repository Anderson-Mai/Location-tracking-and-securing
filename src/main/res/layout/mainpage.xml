<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
        
    
    <RelativeLayout
        		  android:id="@+id/wrapper"
			      android:layout_width="wrap_content"
				  android:layout_height="wrap_content" 
				  android:background="#00000000">
        
        
     <TextView  android:id="@+id/top_line"
			      android:layout_width="match_parent"
				  android:layout_height="3dp" 
				  android:background="#0080B4">
	   </TextView>  
	   
	   <LinearLayout 
	         android:id="@+id/headerBarSection"
	         android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_marginRight="3dp"
             android:layout_marginLeft="3dp"
             android:layout_marginTop="3dp"
             android:layout_marginBottom="20dp"
             android:layout_below="@+id/top_line"
             android:background="@drawable/green320">
             
		   <LinearLayout 
		         android:id="@+id/headerBar"
		         android:layout_width="wrap_content"
	             android:layout_height="50dp"
	             android:background="#00000000"
	             android:layout_gravity="center"
	             android:orientation="horizontal">
		       
		       
	       <Button
	           	 	android:id="@+id/unreadMsg"
	            	android:layout_width="50dp"
	            	android:layout_height="50dp"
	            	android:layout_marginRight="10dp"
	            	android:layout_marginLeft="20dp"
	            	android:background="@drawable/tracking_points">
	   		</Button>
		   
	       
		    <TextView
			    android:id="@+id/HeaderLayout"
		        android:layout_width="225dp" 
		        android:background="#00000000"
		        style="@style/screenTitleText"
		        android:layout_height="50dp"
		        android:text="Location Tracking System "
				android:textColor="@color/white"
				android:textSize="20sp"
				android:textStyle="italic"
				android:typeface="sans" />
	
	   		</LinearLayout>
   		</LinearLayout>

   		
		      
		         <LinearLayout
		        		android:id="@+id/client_one"
		        		android:layout_width="match_parent" 
		       			android:layout_gravity="center_horizontal"
		       			android:layout_height="100dp"
		       			android:layout_below="@+id/headerBarSection" 
		       			android:layout_marginLeft="20dp"
		        		android:orientation="horizontal"
					    android:visibility="gone">
		     
			   			 <Button
			           	 	android:id="@+id/client_one_button"
			            	android:layout_width="100dp"
			            	android:layout_height="40dp"
			            	android:background="@drawable/tracking_points"
			            	android:layout_gravity="center">
		   				</Button>

			   			 <TextView
			   			     android:id="@+id/tracking_client_one"
			   			     android:layout_width="200dp"
			   			     android:layout_height="40dp"
			   			     android:layout_marginLeft="10dp"
			   			     android:background="#00000000"
			   			     android:gravity="left|center_vertical"
			   			     android:text="Text fuck"
			   			     android:textColor="@color/black"
			   			     android:textStyle="italic"
			   			     android:clickable="true"
			   			     android:textSize="16sp" />

	   			  </LinearLayout>
		  
		              <LinearLayout
		        		android:id="@+id/client_two"
		        		android:layout_width="match_parent" 
		       			android:layout_gravity="center_horizontal"
		       			android:layout_marginTop="5dp"
		       			android:layout_height="100dp"
		       			android:layout_below="@+id/client_one"
		       			android:layout_marginLeft="20dp"
		        		android:orientation="horizontal"
						android:visibility="gone"  >
		     
			   			 <Button
			           	 	android:id="@+id/client_two_button"
			            	android:layout_width="100dp"
			            	android:layout_height="40dp"
			            	android:background="@drawable/tracking_points"
			            	android:layout_gravity="center">
		   				</Button>

			   			 <TextView
			   			     android:id="@+id/tracking_client_two"
			   			     android:layout_width="200dp"
			   			     android:layout_height="40dp"
			   			     android:layout_marginLeft="10dp"
			   			     android:background="#00000000"
			   			     android:gravity="left|center_vertical"
			   			     android:text="Text two"
			   			     android:textColor="@color/black"
			   			     android:textStyle="italic"
			   			     android:clickable="true"
			   			     android:textSize="16sp" />

	   			  </LinearLayout>

		<LinearLayout
			android:id="@+id/client_three"
			android:layout_width="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="5dp"
			android:layout_height="100dp"
			android:layout_below="@+id/client_two"
			android:layout_marginLeft="20dp"
			android:visibility="gone"
			android:orientation="horizontal">

			<Button
				android:id="@+id/client_three_button"
				android:layout_width="100dp"
				android:layout_height="40dp"
				android:background="@drawable/tracking_points"
				android:layout_gravity="center">
			</Button>

			<TextView
				android:id="@+id/tracking_client_three"
				android:layout_width="200dp"
				android:layout_height="40dp"
				android:layout_marginLeft="10dp"
				android:background="#00000000"
				android:gravity="left|center_vertical"
				android:text="Text three"
				android:textColor="@color/black"
				android:textStyle="italic"
				android:clickable="true"
				android:textSize="16sp" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/client_four"
			android:layout_width="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="5dp"
			android:layout_height="100dp"
			android:layout_below="@+id/client_three"
			android:layout_marginLeft="20dp"
			android:visibility="gone"
			android:orientation="horizontal">

			<Button
				android:id="@+id/client_four_button"
				android:layout_width="100dp"
				android:layout_height="40dp"
				android:background="@drawable/tracking_points"
				android:layout_gravity="center">
			</Button>

			<TextView
				android:id="@+id/tracking_client_four"
				android:layout_width="200dp"
				android:layout_height="40dp"
				android:layout_marginLeft="10dp"
				android:background="#00000000"
				android:gravity="left|center_vertical"
				android:text="Text three"
				android:textColor="@color/black"
				android:textStyle="italic"
				android:clickable="true"
				android:textSize="16sp" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/client_five"
			android:layout_width="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="5dp"
			android:layout_height="100dp"
			android:layout_below="@+id/client_four"
			android:layout_marginLeft="20dp"
			android:visibility="gone"
			android:orientation="horizontal">

			<Button
				android:id="@+id/client_five_button"
				android:layout_width="100dp"
				android:layout_height="40dp"
				android:background="@drawable/tracking_points"
				android:layout_gravity="center">
			</Button>

			<TextView
				android:id="@+id/tracking_client_five"
				android:layout_width="200dp"
				android:layout_height="40dp"
				android:layout_marginLeft="10dp"
				android:background="#00000000"
				android:gravity="left|center_vertical"
				android:text="Text three"
				android:textColor="@color/black"
				android:textStyle="italic"
				android:clickable="true"
				android:textSize="16sp" />

		</LinearLayout>


	</RelativeLayout>
	 
</RelativeLayout>
