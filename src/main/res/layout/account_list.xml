<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/pre_background" 
    android:orientation="vertical" >
    <!-- android:background="#007B76" -->
     <TextView
   		   	     android:id="@+id/header"
   		   	     android:layout_width="fill_parent"
   		   	     android:layout_height="35dp"
   		   	     android:layout_marginTop="10dp"
   		   	     android:background="@drawable/green320"
   		   	     android:gravity="center"
   		   	     android:text="Register"
   		   	     android:textColor="@android:color/white"
   		   	     android:textSize="18sp" />
    
     <TextView
    	      android:id="@+id/note"
    	      android:layout_marginTop="20dip"
    	      android:layout_width="fill_parent"
    	      android:layout_height="wrap_content" 
    	      android:gravity="left"
    	      android:text="Select an account and register it with this Tracking Base app which will receive the location data from your Tracking Client. For best practice, this email account  should not be synchonized and should be used with this apps only"
    	      android:layout_marginBottom="20dip"
    	      android:layout_marginRight="20dip"
    	      android:layout_marginLeft="20dip"
    	      android:textSize="14sp"
    	      android:textColor="@android:color/black"
    	      android:background="#00000000"
    	      android:layout_below="@+id/header"/>
     
      <TextView
    	      android:id="@+id/account_header" 
    	      android:layout_marginTop="20dip"
    	      android:layout_width="fill_parent"
    	      android:layout_height="30dp" 
    	      android:gravity="center"
    	      android:text="Gmail Account List"
    	      android:layout_marginBottom="10dip"
    	      android:layout_marginRight="40dip"
    	      android:layout_marginLeft="40dip"
    	      android:textSize="18sp"
    	      android:textColor="@android:color/white"
    	      android:background="@drawable/green320"
    	      android:layout_below="@+id/note"/>
    
    
     <TextView 
				android:layout_width="match_parent" 
				android:layout_height="5dip"
				android:id="@+id/topline"
				android:layout_centerHorizontal="true"
				android:layout_marginLeft="10dip"
        		android:layout_marginRight="10dip"
        		android:layout_marginTop="20dip"
				android:visibility="gone"
				android:layout_below="@+id/account_header"
				android:background="#6FC3C1">
  	 </TextView>
  	 
             <LinearLayout
                android:id="@+id/AccountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
   		   	    android:layout_marginRight="10dip"
   		   	    android:layout_marginBottom="55dip"
   		   	    android:layout_below="@+id/topline"
                android:orientation="vertical">
      
      			<!--  android:layout_marginLeft="10dip"
   		   	    android:layout_marginRight="10dip"
   		   	    android:layout_below="@+id/topline"
   		   	    -->
   		   	    
   		   	    <TextView 
					android:layout_width="match_parent" 
					android:layout_height="3dip"
					android:id="@+id/aline"
					android:background="#BFE2F9">
  	         </TextView>
  	         
		 		<ListView
   		   	    	android:id="@+id/gmailAccountList"
   		   	    	android:layout_width="fill_parent"
   		   	    	android:layout_height="fill_parent"
   		   	        android:background="#00000000"
   		   	        android:divider="#BFE2F9"
   		   	        android:dividerHeight="1dp"
   		   	    	android:textSize="16sp" 
   		   	    	android:scrollbarStyle="insideOverlay">
   		   		</ListView>
   		   		
   		   		<TextView 
					android:layout_width="match_parent" 
					android:layout_height="1dip"
					android:id="@+id/bottomline"
					android:background="#BFE2F9">
  	         </TextView>
   		  </LinearLayout> 
   		  
		
   		   
   		   	 <Button
           	 	android:id="@+id/accountButtonBack"
            	android:layout_width="140dip"
            	android:layout_height="50dip"
            	android:layout_alignParentBottom="true"
            	android:layout_centerHorizontal="true"
            	android:layout_marginBottom="3dip"
            	android:background="@drawable/btn_blue_2"
            	android:gravity="center"
            	android:paddingBottom="10dip"
            	android:textSize="18sp"
            	android:paddingTop="5dip"
            	android:text="Back"
            	android:textColor="@color/white">
   			</Button>

   		   	

	</RelativeLayout>  
	
	