<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	android:orientation="vertical">
	<!-- android:background="#007B76" -->

	<RelativeLayout
			  android:layout_width="fill_parent"
			  android:id="@+id/topHeaderLayout"
			  android:background="@drawable/blue320"
			  android:layout_height="50dp"
			  android:layout_marginTop="2dp"
			  android:orientation="horizontal">

		<TextView
			android:id="@+id/header"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:gravity="center"
			android:text="Request client device"
			android:textColor="@color/white"
			android:layout_centerHorizontal="true"
			android:textSize="16sp"
			android:layout_marginLeft="10dp"
			android:layout_alignParentLeft="true"
			android:typeface="sans" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:id="@+id/button_wraper"
				android:background="#00000000"
				android:layout_height="30dp"
				android:layout_marginLeft="20dp"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:orientation="horizontal">

				<Button
					android:id="@+id/button_home"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:background="@drawable/back_button"
					android:typeface="sans"
					android:layout_marginRight="15dp"
					android:textColor="@color/white">
				</Button>

				<Button
					android:id="@+id/button_add"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:background="@drawable/add_to_list_icon_orange"
					android:layout_marginRight="15dp">
				</Button>

				<Button
					android:id="@+id/list_menu"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginRight="15dp"
					android:background="@drawable/menu_icon">
				</Button>
			</LinearLayout>
		</RelativeLayout>
	
	 <ScrollView  android:id="@+id/ScrollSection"
	         android:layout_width="fill_parent"
	         android:layout_height="300dp"
		 android:layout_marginTop="36dp"
		 android:layout_below="@+id/topHeaderLayout"
		 android:layout_alignParentLeft="true"
		 android:layout_alignParentStart="true">
		  
      <LinearLayout
                android:id="@+id/WrappedView"
                android:layout_width="302dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:orientation="vertical"
                >
            <LinearLayout
                android:id="@+id/ContactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                >
    	    	<TextView
	    	        android:id="@+id/NameEntryBar"
	    	        android:text="Client name:"
	    	        android:layout_width="130dp"
	    	        android:layout_height="30dip"
	    	        android:background="#00000000"
	    	        android:gravity="right|center_vertical"
	    	        android:paddingRight="12dp"
	    	        android:textColor="@color/text_black"
	    	        android:textSize="15sp"
	    	        android:typeface="sans"/>

	    	    <EditText
			    	    android:id="@+id/NameEntry"
			    	    android:layout_width="160dp"
			    	    android:layout_height="30dp"
			    	    android:background="@drawable/edit_txt_bg"
			    	    android:gravity="center"
			    	    android:hint="Client name"
			    	    android:inputType="text"
			    	    android:maxLength="20"
			    	    android:textColor="@color/text_black"
			    	    android:textColorHint="@color/grey"
			    	    android:textSize="15sp"
			    	    android:typeface="sans">
	    		</EditText>
    	  	</LinearLayout>
    	
                
          	<LinearLayout
                android:id="@+id/GmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >
				<TextView
			            android:id="@+id/clientnumberheader"
			       		android:layout_height="30dip"
						android:layout_width="130dp"
						android:background="#00000000"
						android:text="Client number:"
						android:textColor="@color/text_black"
					    android:paddingRight="12dp"
						android:gravity="right|center_vertical"
						android:textSize="15sp">
		  		</TextView>
					
		  		<EditText 
				    	android:id="@+id/client_number"
						android:layout_height="30dp" 
						android:layout_width="160dp"
						android:textSize="15sp"	
						android:background="@drawable/edit_txt_bg"
						android:hint="eleven digits"
						android:gravity="center"
						android:maxLength="13"
						android:inputType="number"
						android:textColor="@color/text_black"
						android:textColorHint="@color/grey">
					
				</EditText>
                   	
 			</LinearLayout>

    	  </LinearLayout>
    	  

   	 </ScrollView>

		<RelativeLayout android:layout_width="fill_parent"
		        android:id="@+id/bottomButtonsLayout" 
		        android:background="#00000000"
		        android:gravity="center" 
		        android:layout_height="50dip" 
		        android:layout_alignParentBottom="true"
		        android:orientation="horizontal">
					<Button
						android:id="@+id/submitButton"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:background="@drawable/submit_icon"
						android:layout_centerVertical="true"
						android:textSize="20sp"
						android:typeface="sans"
						android:layout_centerHorizontal="true"
						android:textColor="@color/white"
						android:visibility="gone">
					</Button>

		</RelativeLayout>

</RelativeLayout>
	
	